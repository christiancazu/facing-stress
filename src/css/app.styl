// app global css

body
  background-color: #f5f5f5

/* custom: arrow direction to right in dropdown and rotation animation */
.arrow-right .q-btn-dropdown__arrow
  transform: rotate(-90deg)

/* arror rotation animation */
.arrow-right .rotate-180
  transform: rotate3d(0, 0, 1, 90deg)

/* router-link page in-out transition */
.page-enter-active, .page-leave-active
  transition: opacity .3s ease

.page-enter, .page-leave-to
/* .page-leave-active below version 2.1.8 */
  opacity: 0
